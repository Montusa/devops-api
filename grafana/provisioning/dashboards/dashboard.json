{
  "dashboard": {
    "title": "DevOps API Metrics",
    "tags": ["api", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "title": "API Requests",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "refId": "A"
          }
        ],
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "title": "Request Duration",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, http_request_duration_seconds_bucket)",
            "refId": "A"
          }
        ],
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      }
    ],
    "schemaVersion": 30,
    "version": 1,
    "refresh": "30s"
  },
  "overwrite": true
}